<h1>Edit a Todo</h1>

<% if @list.errors.any? %>

<h2> The following errors prevented your list from being saved</h2>
<ul>
	<% @list.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>

<% end %>

<%= form_for @list do |f| %>

<p>
<%= f.label :name%> <br>
<%= f.text_field :name %>
</p>

<p>
<%= f.label :description%> <br>
<%= f.text_area :description %>
</p>

<p>
<%= f.submit %>
</p>

<% end %>

<%= link_to "Back to List Listing", lists_path %>